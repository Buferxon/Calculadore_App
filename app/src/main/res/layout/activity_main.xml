<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2pt"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_marginBottom="1pt"
        android:layout_weight="1"
        android:background="@color/black"
        android:editable="false"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:onClick="operadorEvent"
        android:text=""
        android:textColor="@color/white"
        android:textSize="40pt" />

    <TableLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow

            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/accolor"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="2pt"
                ></Button                >
            <Button
                android:id="@+id/buPlusMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+/-"
                android:onClick="numberEvent"
                android:backgroundTint="@color/opcolor"
                android:layout_marginRight="2pt"

                ></Button>
            <Button
                android:id="@+id/buDivide"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="/"
                android:onClick="operadorEvent"
                android:backgroundTint="@color/opcolor"
                android:layout_marginRight="2pt"
                ></Button>
            <Button
                android:id="@+id/buMultypli"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="*"
                android:onClick="operadorEvent"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/opcolor"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/numcolor"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt" />

            <Button
                android:id="@+id/bu8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="8"
                android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
                android:layout_marginRight="2pt"></Button>
            <Button
                android:id="@+id/bu9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="9"
                android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
                android:layout_marginRight="2pt"></Button>
            <Button
                android:id="@+id/buPercent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="%"
                android:onClick="percentEvent"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/opcolor"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
                android:text="4"
                android:layout_marginRight="2pt"></Button>
            <Button
                android:id="@+id/bu5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="5"
                android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
                android:layout_marginRight="2pt"
                ></Button>
            <Button
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="6"
                android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
                android:layout_marginRight="2pt"
                ></Button>
            <Button
                android:id="@+id/buPlus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:onClick="operadorEvent"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/opcolor"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
                android:text="1"
                android:layout_marginRight="2pt"
                ></Button                >
            <Button
                android:id="@+id/bu2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="2"
                android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
                android:layout_marginRight="2pt"

                ></Button>
            <Button
                android:id="@+id/bu3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="3"
                android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
                android:layout_marginRight="2pt"
                ></Button>
            <Button
                android:id="@+id/buMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="-"
                android:onClick="operadorEvent"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/opcolor"
                ></Button>
        </TableRow>
    </TableLayout>
    
    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="38pt"

        android:orientation="horizontal">
            <Button
            android:id="@+id/bu0"
            android:layout_width="45pt"
            android:layout_height="38pt"
            android:layout_weight="2"
                android:backgroundTint="@color/numcolor"
            android:text="0"
            android:onClick="numberEvent"
            android:layout_marginRight="2pt"
            ></Button>
            <Button
            android:id="@+id/buDot"
            android:layout_weight="1"
            android:layout_width="45pt"
            android:layout_height="38pt"
            android:text="."
            android:onClick="numberEvent"
                android:backgroundTint="@color/numcolor"
            android:layout_marginRight="2pt"
            ></Button>
            <Button
            android:id="@+id/buEqual"
            android:layout_weight="3"
            android:layout_width="45pt"
            android:layout_height="38pt"
            android:text="="
            android:onClick="equalEvent"
            android:backgroundTint="@color/opcolor"
            android:layout_marginRight="2pt"
            ></Button>
    </LinearLayout>
</LinearLayout>